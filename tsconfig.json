{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "strict": false,
    "skipLibCheck": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "moduleResolution": "node",
    "outDir": "./dist",
    "inlineSourceMap": true
  },
  "include": [
    "src/**/*"
  ]
}
